{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": "Course Lessons"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "content": {
      "type": "richtext"
    },
    "videoUrl": {
      "type": "string"
    },
    "resources": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ]
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course"
    },
    "duration": {
      "type": "integer",
      "description": "Lesson duration in minutes"
    },
    "order": {
      "type": "integer",
      "description": "Lesson order in course"
    },
    "quiz": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::quiz.quiz"
    }
  }
}